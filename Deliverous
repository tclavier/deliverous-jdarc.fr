mailman:
  image: tclavier/mailman2
  hostname: smtp.jdarc.fr
  ports:
  - ip: ml.jdarc.fr
    container_port: 80
    host_port: 80
  - ip: ml.jdarc.fr
    container_port: 25
    host_port: 25
  volumes: 
  - name: mailman
    path: /var/lib/mailman
  environment:
    OPS: TomAres
    ONLINE_MODE: false
    WORLD_TYPE: DEFAULT
    GENERATE_STRUCTURES: true
    DEFAULT_WORLD_SIZE: 29999984

sshd:
  image: tclavier/mailman2-ssh
  ports:
  - ip: ml.jdarc.fr
    container_port: 22
    host_port: 22
  volumes: 
  - name: mailman
    path: /var/lib/mailman
  deploy_with:
  - mailman
